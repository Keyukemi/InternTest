@model TodoItem;

@{
    ViewData["Title"] = "Todo Item";
}
<h1 style="text-align: center; color: Blue;">@ViewData["Title"]</h1>

<h3 style="text-align: center; color: Blue;">Todo Item</h3>

@{
   if (ViewBag.ErrorMessage != null)
   {
       <p style="color: red;">@ViewBag.ErrorMessage</p>
   }
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Due Date</th>
            <th colspan="2">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            if(Model != null)
            {
                <tr>
                    <td>@Model.ID</td>
                    <td>@Model.Name</td>
                    <td>@Model.Description</td>
                    <td>@Model.DueDate</td>
                    <td>
                        <a asp-controller = "Todo" asp-action ="EditItem" asp-route-id ="@Model.ID">
                            <button>Edit</button>
                        </a>
                        
                    </td>
                    <td>
                        <a asp-controller = "Todo" asp-action ="DeleteItem" asp-route-id ="@Model.ID">
                            <button>Delete</button>
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
