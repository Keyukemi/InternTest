@model List<TodoItem>;

@{
    ViewData["Title"] = "Todo Items";
}
<h1 style="text-align: center; color: Blue;">@ViewData["Title"]</h1>

<h3 style="text-align: center; color: Blue;">Todo list</h3> 

<table class="table table-hover">
    <thead>
        <tr> 
            <th>Name</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody> 
        @{
            foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.DueDate</td>
                    <td>
                        @if(SignInManager.IsSignedIn(User))
                        {
                            <a asp-controller = "Todo" asp-action ="SingleItem" asp-route-id ="@item.ID">
                            <button>See Details</button>
                            </a>
                        }   
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
